{
  "name": "betterapp-desktop",
  "version": "1.0.0",
  "description": "BetterApp Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.betterapp.desktop",
    "productName": "BetterApp",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "../dist/**/*",
      "../server/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "icon.png"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
